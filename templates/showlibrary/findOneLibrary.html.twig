{% extends 'base.html.twig' %} 
{% block title %}Library!{% endblock %} 
{% block body %}
<div class="container">
    <div class="row mt-3 mb-3">
        <div class="row ">
            <div class="col-md-4 fs-3">&nbsp; Librairie...</div>
            <div class="col-md-4"></div>
            <div class="col-md-4"></div>
        </div>
        <div class="col-md-6">
            {% if libraries is empty %}
        <p>No libraries found for "{{ search_query }}".</p>
    {% else %}
        <p>Found {{ libraries|length }} libraries matching "{{ search_query }}":</p>
        <ul>
            {% for library in libraries %}
                <li>
                    <a href="{{ path('library_detail', {'id': library.id}) }}">{{ library.name }}</a>
                    ({{ library.books|length }} livre(s))
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    
    <p><a href="{{ path('library') }}">Back to Libraries</a></p>
        </div>      
    </div>
</div>
{% endblock %}
