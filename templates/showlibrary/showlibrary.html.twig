{% extends 'base.html.twig' %}

{% block title %}books!{% endblock %}

{% block body %}
<div class="container">
    <h3 class="mt-3 d-flex justify-content-center">Livres de la biblioth√®que "{{ library.name }}"</h3>
    <div class="row mt-3 mb-3">
        {% for book in books %}
            <div class="col-md-3">
                <div class="card m-3" style="box-shadow: 1px 1px 1px;">
                    <div class="card-body">
                    <h5 class="card-title col-10 text-truncate">{{ book.title }} </h5>
                    <p class="card-text">{{ book.author }}</p>
                    <img src="{{ asset('divers/images/' ~ book.bookcover) }}" class="img-fluid card-img-top" style="height:300px;width:300px" alt="image d'un livre" />
                    <p class="card-text">{{ book.editor }}</p>
                    <p class="card-text">{{ book.nbPages }} page(s)</p>
                    <p class="card-text col-10 text-truncate">{{ book.description }}</p>     
                    <a href="{{ path('showone', {'id':book.id})}}" class="btn btn-primary">Lire +</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>   
</div>
{% endblock %}
